<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Abiquo Branding</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="/css/bootstrap.css" rel="stylesheet">
    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }

      .hidden {
        display: none;
      }
    </style>
    <link href="/css/bootstrap-responsive.css" rel="stylesheet">
    <link href="/css/colorpicker.css" rel="stylesheet">

    <link href="/css/google-code-prettify/prettify.css" rel="stylesheet">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="../assets/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png">
  </head>

  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">Abiquo Branding</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li><a href="/">Home</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">

      <form name="theme_form" class="form-horizontal" style="margin-top: 20px" action="/create_theme" method="POST" enctype='multipart/form-data'>
        <fieldset>
        {% if enterprise %}
          <input type='hidden' name='type' value='enterprise'>
          <div class="control-group">
            <h1>Configure your new enterprise theme</h1>
          </div>
          <div class="control-group">
            <label class="control-label" for="input01">Theme's name *</label>
            <div class="controls">
              <input type="text" class="input-xlarge" id="input01" name="theme_name">
            </div>
          </div>
          {% if colors.size > 0 %}
          <div class="control-group">
            <h2>Custom Colors</h2>
          </div>
          <hr />
            {% for color in colors %}
              <div class="control-group">
                <label class="control-label" for="colorPicker">{{color.name}}</label>
                <div class="controls">
                  <div class="input-append color" data-color="#{{color.color}}" data-color-format="hez" id="{{color.id}}">
                    <input type="text" class="span2" value="#{{color.color}}" name="{{color.id}}" >
                    <span class="add-on"><i style="background-color: #{{color.color}}"></i></span>
                  </div>
                </div>
              </div>
            {% endfor %}
          {% endif %}
          
          <div class="control-group">
            <h2>Custom Image files</h2>
          </div>
          <hr />
          {% for image in images %}
          <div class="control-group">
            <label class="control-label" for="fileInput">{{image.name}}</label>
            <div class="controls">
              <input class="input-file" id="fileInput" type="file" name='{{image.id}}'>
            </div>
          </div>
          {% endfor %}
        {% endif %}

        {% if base %}
          <input type='hidden' name='type' value='base'>
          <div class="control-group">
            <h1>Configure your new base theme</h1>
          </div>
          <div class="control-group">
            <label class="control-label" for="input01">Theme's name *</label>
            <div class="controls">
              <input type="text" class="input-xlarge" id="input01" name="theme_name">
            </div>
          </div>
          {% if colors.size > 0 %}
            <div class="control-group">
              <h2>Custom Colors</h2>
            </div>
            <hr />
            {% for color in colors %}
              <div class="control-group">
                <label class="control-label" for="colorPicker">{{color.name}}</label>
                <div class="controls">
                  <div class="input-append color" data-color="#{{color.color}}" data-color-format="hez" id="{{color.id}}">
                    <input type="text" class="span2" value="#{{color.color}}" name="{{color.id}}" >
                    <span class="add-on"><i style="background-color: #{{color.color}}"></i></span>
                  </div>
                </div>
              </div>
            {% endfor %}
          {% endif %}
          
          <div class="control-group">
            <h2>Custom Image files</h2>
          </div>
          <hr />
          {% for image in images %}
          <div class="control-group">
            <label class="control-label" for="fileInput">{{image.name}}</label>
            <div class="controls">
              <input class="input-file" id="fileInput" type="file" name='{{image.id}}'>
            </div>
          </div>
          {% endfor %}

        {% endif %}
          <div class="alert alert-info">
            * Required fields
          </div>

          <div class="hidden" id="error_box">
          </div>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary">Generate theme</button>
          </div>
        </fieldset>
      </form>

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap-colorpicker.js"></script>
    <script src="/js/google-code-prettify/prettify.js"></script>
    <script src="/js/validate.min.js"></script>
    <script>
      $(function(){
      window.prettyPrint && prettyPrint()
        {% for color in colors %}
          $('#{{color.id}}').colorpicker({
            format: 'hex'
          });
        {% endfor %}
      });

      var validator = new FormValidator(
            'theme_form',
            [
              {
                name: 'theme_name',
                display: 'theme\'s name',    
                rules: 'required|alpha_dash'
              }
            ],
            function(errors, event) {
              var error_div = $("#error_box");
              if (errors.length > 0) {
                  error_div.html(errors.join('<br />'));
                  error_div.css("display", "inherit");
                  error_div.attr("class", "alert alert-block alert-error fade in");

                  //Cancel form submit
                  if (event && event.preventDefault) {
                    event.preventDefault();
                  } else if (event) {
                    event.returnValue = false;
                  }
              }
            }
      );

    </script>

  </body>
</html>
